<!-- Footer Section -->
<footer class="footer">
    <div class="container">

        {% if data.head is defined and data.head is not null and data.head|length > 0 %}
            <div class="row">
                <div class="col mb-5">
                    <h2>{{ data.head }}</h2>
                </div>
            </div>
        {% endif %}

        <div class="row">
            <p>&copy; 2024 {{ data.description }}</p>
            <p>
                <a role="button" class="text-black">Privacy Policy</a> |
                <a role="button" class="text-black">Terms of Service</a>
            </p>
            <p>
                {% for social in data.items %}
                <a href="{{ social.link }}"><img src="{{ absolute_url(asset('social-icons/' ~ social.thumb, 'img')) }}" alt="{{ social.alt }}"></a>
                {% endfor %}
            </p>
        </div>
    </div>
</footer>
