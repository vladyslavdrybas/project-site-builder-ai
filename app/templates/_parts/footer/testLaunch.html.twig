<!-- Footer Section -->
<footer class="footer">
    <div class="container">

        {% if data.head is defined and data.head is not null and data.head|length > 0 %}
            <div class="row">
                <div class="col mb-5">
                    <h2>{{ data.head }}</h2>
                </div>
            </div>
        {% endif %}

        <div class="row">
            {% if data.copyright is defined and data.copyright is not null %}
            <p>&copy; 2024 {{ data.copyright }}</p>
            {% endif %}
            <p>
                <a role="button" class="text-black">Privacy Policy</a> |

                <a role="button" class="text-black">Terms of Service</a>
            </p>
            <p>
                {% for social in data.socialLinks %}
                    {% if social.link is defined and social.link is not null %}
                        <a href="{{ social.link }}"><img src="{{ absolute_url(asset('social-icons/' ~ social.media, 'img')) }}" alt="{{ social.alt }}"></a>
                    {% endif %}
                {% endfor %}
            </p>
        </div>
    </div>
</footer>
