<!-- Hero Section -->
<section id="hero" class="hero">
    <div class="container col-xxl-8 px-4 pb-5">
        <div class="row justify-content-center align-items-center g-5">

            <div class="col-lg-6 text-start">
                {% if data.head is defined and data.head is not null %}
                    <h1 class="display-5 fw-bold lh-1 mb-3 text-white">{{ data.head }}</h1>
                {% endif %}

                {% if data.description is defined and data.description is not null %}
                    <p class="lead text-white">{{ data.description }}</p>
                {% endif %}

                {% if data.callToActionButton is defined and data.callToActionButton is not null %}
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <a
                            href="{{ data.callToActionButton.link }}"
                            type="button"
                            class="btn btn-light btn-lg px-2 me-md-2 rounded-5"
                        >
                            {{ data.callToActionButton.text }}
                        </a>
                    </div>
                {% endif %}
            </div>

            {% if data.media.id is defined and data.media.id is not null %}
                <div class="col-10 col-sm-8 col-lg-6 d-none d-md-block">

                    {% if data.media.content is defined and data.media.content is not null %}
                        <img
                            src="data:{{ data.media.mimeType }};base64,{{ data.media.content }}"
                            class="d-block mx-lg-auto img-fluid"
                            alt="creativity"
                            loading="lazy"
                        >
                    {% else %}
                        <img
                            src="{{ absolute_url(path('app_media_show', {'media': data.media.id})) }}"
                            class="d-block mx-lg-auto img-fluid"
                            alt="creativity"
                            loading="lazy"
                        >
                    {% endif %}
                </div>
            {% endif %}

        </div>
    </div>
</section>
