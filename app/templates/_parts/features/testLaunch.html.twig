<!-- Features Section -->
<section id="features" class="features">
    <div class="container text-center">
        {% if data.head is defined and data.head is not null and data.head|length > 0 %}
            <div class="row">
                <div class="col mb-5">
                    <h2>{{ data.head }}</h2>
                </div>
            </div>
        {% endif %}

        <div class="row">

            {% for feature in data.items %}
                {% if feature.head is not null and feature.description is not null %}
                    <div class="col-md-4">
                        {% if feature.thumb is defined and feature.thumb is not null %}
                            <div class="feature-icon mb-3">
                                <img
                                    class="img-fluid"
                                    src="{{ absolute_url(asset( feature.thumb, 'img')) }}"
                                    alt="icon"
                                >
                            </div>
                        {% endif %}
                        <h4>{{ feature.head }}</h4>
                        <p>{{ feature.description }}</p>
                    </div>
                {% endif %}
            {% endfor %}

        </div>
    </div>
</section>
