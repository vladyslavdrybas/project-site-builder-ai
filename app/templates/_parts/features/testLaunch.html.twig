<!-- Features Section -->
<section id="features" class="features">
    <div class="container text-center">
        {% if data.head is defined and data.head is not null and data.head|length > 0 %}
            <div class="row">
                <div class="col mb-5">
                    <h2>{{ data.head }}</h2>
                </div>
            </div>
        {% endif %}

        <div class="row">

            {% for feature in data.items %}
                <div class="col-md-4">
                    <div class="feature-icon mb-3">
                        <img
                            class="img-fluid"
                            src="{{ absolute_url(asset( feature.thumb, 'img')) }}"
                            alt="icon"
                        >
                    </div>
                    <h4>{{ feature.head }}</h4>
                    <p>{{ feature.description }}</p>
                </div>
            {% endfor %}

        </div>
    </div>
</section>
