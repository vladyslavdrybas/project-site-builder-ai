<!-- Header Section -->
<header class="header">
    <nav class="navbar navbar-expand-md navbar-light">
        <div class="container">

                {% if (data.brand.media.ownerId is defined and data.brand.media.ownerId is not null) %}
                    <a class="navbar-brand" href="#">
                        <div
                            class="header-brand-logo"
                        >
                            {% if data.brand.media.url is defined and data.brand.media.url is not null%}
                                <img
                                    src="{{ data.brand.media.url }}"
                                    class="h-100"
                                    alt="icon"
                                >
                            {% elseif data.brand.media.content is defined and data.brand.media.content is not null %}
                                <img
                                    src="data:{{ data.brand.media.mimeType }};base64,{{ data.brand.media.content }}"
                                    class="h-100"
                                    alt="icon"
                                >
                            {% elseif data.brand.media.id is defined and data.brand.media.id is not null %}
                                <img
                                    src="{{ absolute_url(path('app_media_show', {'media': data.brand.media.id})) }}"
                                    class="h-100"
                                    alt="icon"
                                >
                            {% endif %}

                        </div>
                    </a>
                {% endif %}

                <a class="navbar-brand" href="#">
                    {{ data.brand.text }}
                </a>

            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarCollapse"
                aria-controls="navbarCollapse"
                aria-expanded="false"
                aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarCollapse">
                {% if data.navigation|length > 0 %}
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        {% for key, el in data.navigation %}
                            {% if el is not empty %}
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="#{{ key }}">{{ el }}</a>
                            </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                {% endif %}

                {% if data.callToActionButton.text is defined %}
                    <a
                        href="{{ data.callToActionButton.link }}"
                        class="btn btn-primary rounded-5 btn-goto-payment ms-auto"
                    >
                        {{ data.callToActionButton.text }}
                    </a>
                {% endif %}

            </div>

        </div>
    </nav>
</header>
