{% set blockName = 'header_v1' %}

<div class="d-flex flex-column justify-content-center align-content-center mb-2">
    <button
        class="btn btn-primary rounded-1"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#collapseHeaderBuilderForm"
        aria-expanded="true"
        aria-controls="collapseHeaderBuilderForm"
    >
        {{ builderForm.header.vars.label }}
    </button>

    <div class="collapse card mt-1 p-1" id="collapseHeaderBuilderForm">

        {{ form_row(builderForm.header, {'label' : false}) }}

    </div>
</div>
