{% set blockName = 'footer_v1' %}

<div class="d-flex flex-column justify-content-center align-content-center mb-2">
    <button
        class="btn btn-primary rounded-1"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#collapseFooterBuilderForm"
        aria-expanded="true"
        aria-controls="collapseFooterBuilderForm"
    >
        {{ builderForm.footer.vars.label }}
    </button>

    <div class="collapse card mt-1 p-1" id="collapseFooterBuilderForm">

        {{ form_row(builderForm.footer, {'label' : false}) }}

    </div>
</div>
