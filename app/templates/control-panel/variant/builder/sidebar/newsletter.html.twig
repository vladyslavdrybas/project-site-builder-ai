{% set blockName = 'newsletter_v1' %}

<div class="d-flex flex-column justify-content-center align-content-center mb-2">
    <button
        class="btn btn-primary rounded-1"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#collapseNewsletterBuilderForm"
        aria-expanded="true"
        aria-controls="collapseNewsletterBuilderForm"
    >
        {{ builderForm.newsletter.vars.label }}
    </button>

    <div class="collapse card mt-1 p-1" id="collapseNewsletterBuilderForm">

        {{ form_row(builderForm.newsletter, {'label' : false}) }}

    </div>
</div>
