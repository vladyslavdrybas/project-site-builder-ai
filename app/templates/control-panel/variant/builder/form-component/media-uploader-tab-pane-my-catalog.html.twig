<div class="tab-pane fade show active" id="{{ form.vars.id }}_modal_catalog" role="tabpanel" aria-labelledby="{{ form.vars.id }}_modal_catalog-tab" tabindex="0">
    <div class="tab-pane-content d-flex flex-column justify-content-between align-items-baseline">
        <div
            data-media-type="media_share_stock"
            data-click-target="#{{ form.getFromCatalogBtn.vars.id }}"
            data-media-id-field="#{{ form.systemId.vars.id }}"
            data-click-target-mask="#{{ form.toSetFromCatalog.vars.id }}"
            id="{{ form.vars.id }}_media_catalog_content"
            class="media-catalog d-flex flex-row flex-wrap justify-content-between mb-5 w-100"
        >
            <!-- EMPTY PLACE FOR LOADED MEDIA THUMBNAILS -->
        </div>

        <div class="d-flex flex-row justify-content-between align-items-baseline w-100 pb-3">
            <button
                id="{{ form.vars.id }}_media_catalog_prev"
                type="button"
                class="
                    modal--tab-media-btn
                    modal--tab-media-btn-prev
                    load-catalog
                    btn
                    btn-dark
                    border-0
                    shadow-none
                    rounded-0
                    p-2
                    px-3
                    pe-5
                    text-center
                "
                data-direction="-1"
                data-content-target="#{{ form.vars.id }}_media_catalog_content"
                data-btn-prev="#{{ form.vars.id }}_media_catalog_prev"
                data-btn-next="#{{ form.vars.id }}_media_catalog_next"
            >
                <svg class="bi bi-1 mb-1"><use xlink:href="#icon-arrow-left-fill"/></svg>
                <span class="media-arrow-page-numbers"></span>
            </button>
            <button
                id="{{ form.vars.id }}_media_catalog_more"
                type="button"
                class="
                    modal--tab-media-btn
                    btn-load-more
                    media-loader
                    load-catalog
                    btn
                    btn-dark
                    border-0
                    shadow-none
                    rounded-0
                    p-2
                "
                data-direction="1"
                data-content-target="#{{ form.vars.id }}_media_catalog_content"
                data-btn-prev="#{{ form.vars.id }}_media_catalog_prev"
                data-btn-next="#{{ form.vars.id }}_media_catalog_next"
            >
                More
            </button>
            <button
                id="{{ form.vars.id }}_media_catalog_next"
                type="button"
                class="
                    modal--tab-media-btn
                    modal--tab-media-btn-next
                    load-catalog
                    btn
                    btn-dark
                    border-0
                    shadow-none
                    rounded-0
                    p-2
                    px-3
                    ps-5
                    text-center
                "
                data-direction="1"
                data-content-target="#{{ form.vars.id }}_media_catalog_content"
                data-btn-prev="#{{ form.vars.id }}_media_catalog_prev"
                data-btn-next="#{{ form.vars.id }}_media_catalog_next"
            >
                <span class="media-arrow-page-numbers"></span>
                <svg class="bi bi-1 mb-1"><use xlink:href="#icon-arrow-right-fill"/></svg>
            </button>

        </div>

    </div>
</div>
