<div
    class="tab-pane fade"
    id="{{ form.vars.id }}_modal_upload"
    role="tabpanel"
    aria-labelledby="{{ form.vars.id }}_modal_upload-tab"
    tabindex="0"
>
    <div class="tab-pane-content d-flex flex-column justify-content-between align-items-baseline">

        <div>
            {{ form_row(form.file, {'label': false, 'attr': {
                'data-content-target': '#' ~ form.vars.id ~ '_media_choose_file_content',
                'class': 'file-upload  with-preview d-none'
            }}) }}
            <label
                for="{{ form.file.vars.id }}"
                id="{{ form.vars.id }}_media_chooseFileBtn"
                type="button"
                class="
                    btn
                    btn-dark
                    border-0
                    shadow-none
                    rounded-0
                    p-3
                    m-auto
                "
            >
                Choose image from your drive
            </label>
            <div class="m-auto help-text">Supported image extensions: <b>jpg, jpeg, png, webp, svg</b></div>
        </div>

        <img id="{{ form.vars.id }}_media_choose_file_content" class="px-4 py-2 mw-100 d-none" alt="uploaded file" title="uploaded file"/>

        <div class="d-flex flex-row justify-content-between align-items-baseline w-100 pb-3">
            <button
                id="{{ form.vars.id }}_media_upload_previewBtn"
                type="button"
                class="
                    formSubmit
                    modal--nav-media-btn
                    btn
                    btn-dark
                    m-0
                    border-0
                    shadow-none
                    rounded-0
                    p-3
                    ms-1
                "
            >
                Upload
            </button>
        </div>
    </div>
</div>
