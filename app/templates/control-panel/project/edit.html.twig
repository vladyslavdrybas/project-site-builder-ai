{% extends 'control-panel/index.html.twig'%}


{% block content %}
<div class="min-vh-100 pt-5">
    <div class="container pt-5 ">

        <div class="row gx-5 justify-content-center">
            {% include 'control-panel/project/prompt-for-ai-usage.html.twig' %}
            <div class="col-md-8 col-lg-5">

                <a
                    class="text-decoration-none text-black"
                    href="{{ absolute_url(path('cp_project_show', {'project': project.id})) }}"
                    title="view project"
                >
                    <h1>
                        {{ project.title }}
                        <svg class="bi bi-1"><use xlink:href="#box-arrow-up-right"/></svg>
                    </h1>
                </a>

                {{ form(projectEditForm, {'method': 'POST', 'attr': {'id': projectEditForm.vars.id}}) }}

                <button
                    class="save btn btn-primary rounded-5"
                    type="submit"
                    form="{{ projectEditForm.vars.id }}"
                    value="save"
                >
                    Save
                </button>
            </div>
        </div>

    </div>
</div>
{% endblock %}
